{
  "watch": ["src", "prisma"],
  "ext": "ts,js,json,prisma",
  "ignore": [
    "src/**/*.spec.ts",
    "src/**/*.test.ts",
    "dist/**/*",
    "node_modules/**/*",
    "logs/**/*"
  ],
  "exec": "ts-node src/index.ts",
  "env": {
    "NODE_ENV": "development"
  },
  "delay": "1000",
  "verbose": true
} 